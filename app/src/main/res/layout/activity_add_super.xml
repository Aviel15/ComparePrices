<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur_background"
    tools:context=".AddSuperActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="257dp"
        android:layout_height="63dp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/aldrich"
        android:onClick="onClick"
        android:text="add the supermarket"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.911" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="220dp"
        android:layout_height="253dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.743"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351">

        <RadioButton
            android:id="@+id/yenot_beitan_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:onClick="onRadioButtonClicked"
            android:tag="1"
            android:text="יינות ביתן"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/rami_levi_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:onClick="onRadioButtonClicked"
            android:tag="2"
            android:text="רמי לוי"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/shufersal_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:onClick="onRadioButtonClicked"
            android:tag="3"
            android:text="שופרסל"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/osher_ad_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:onClick="onRadioButtonClicked"
            android:text="אושר עד"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/yohananof_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:onClick="onRadioButtonClicked"
            android:text="יוחננוף"
            android:textColor="@color/black" />

    </RadioGroup>

    <TextView
        android:id="@+id/textChooseSuper"
        android:layout_width="164dp"
        android:layout_height="41dp"
        android:fontFamily="@font/amethysta"
        android:text="Choose Super"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="375dp"
        android:layout_height="66dp"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:fontFamily="@font/andada"
        android:hint="Enter the address of supermarket:"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.724" />

</androidx.constraintlayout.widget.ConstraintLayout>